<?xml version="1.0" encoding="utf-8"?>
<set
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="300"
    android:shareInterpolator="true"
    >
    <scale
        android:fromXScale="0.2"
        android:fromYScale="0.2"
        android:toXScale="1"
        android:toYScale="1"
        android:pivotX="50%p"
        android:pivotY="50%p"
        />
    <alpha
        android:fromAlpha="0"
        android:toAlpha="1.0"
        />
</set>
