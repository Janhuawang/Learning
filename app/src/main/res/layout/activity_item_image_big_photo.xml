<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <net.archeryc.glidedemo.GlidePhotoView.HackyViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <net.archeryc.glidedemo.GlidePhotoView.CircleIndicator
        android:id="@+id/circleIndicator"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="30dp"
        app:ci_drawable="@drawable/ci_drawable_selected"
        app:ci_drawable_unselected="@drawable/ci_drawable_unselected">

    </net.archeryc.glidedemo.GlidePhotoView.CircleIndicator>
</FrameLayout>
